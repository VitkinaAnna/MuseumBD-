@model IEnumerable<MuseunBD.Hall>

@{
    ViewData["Title"] = "Index";
}

<h1>Зали</h1>

<p>
    <a asp-action="Create">Додати новий зал</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Worker)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Worker.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HallId">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.HallId">Деталі</a> |
                <a asp-action="Delete" asp-route-id="@item.HallId">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
